<div id="new_movies">

  <%if @movie.errors.any?%>
    <%@movie.errors.full_messages.each do |error|%>
      <div class="red">
        <%=error%>
      </div>

    <%end%>
    <br/>
  <%end%>

  <%=form_for @movie do |f| %>
    <%=f.label :name %><br/>
    <%=f.text_field :name%>
    <br/>
    <%=f.label :year%><br/>
    <%=f.text_field :year%>
    <br/>
    <%=f.label :synopsis%><br/>
    <%=f.text_area :synopsis%>
    <br/>
    <%=f.submit%>
  <%end%>


</div>